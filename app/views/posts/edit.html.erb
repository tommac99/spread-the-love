<div class="container">
<%= simple_form_for (@post) do |f| %>
<div>
  <%= f.input :title %>
</div>
<div>
  <%= f.input :description%>
  <%= f.input :category, collection: Post::CATEGORY%>
  <%= f.input :group, collection: ["Community post", "Job post"] %>
</div>
<div>
  <%= f.input :group, collection: ["Community Posting", "Job Posting"] %>
</div>
<div>
  <%= f.input :category, collection: Post::CATEGORY %>
